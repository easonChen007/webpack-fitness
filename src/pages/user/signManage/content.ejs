<div id="page-wrapper">
  <div ms-controller="signManage">
    <div class="container-fluid" id="sign_main">
      <h2 class="page-header"><%= pageTitle %></h2>
      <div class="row">
        <div class="col-md-8 col-lg-6">
          <form>
            <div class="form-group form-required">
              <label>手机号码</label>
              <input id="signNumber-input" type="number" class="form-control" />
            </div>
            <div class="form-group form-required">
              <label for="signName-label">姓名</label>
              <input type="text" class="form-control" id="signName-input" placeholder="请填写您的姓名">
            </div>
            <div class="form-group">
              <label for="signCorporation-label">单位名称</label>
              <input type="text" class="form-control" id="signCorporation-input" placeholder="">
            </div>            
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 text-center">
          <button id="btn-submit" type="button" class="btn btn-success btn-lg">确认签到</button>
        </div>
      </div>
    </div>
    <div class="container-fluid" id="sign_success" style="display: none;">
      <h2 class="page-header">签到成功</h2>
      <div class="row">
        <div class="col-md-8 col-lg-6">
          <img src="/static/images/signSuccess.png" class="img-responsive center-block" />
        </div>
      </div>

      <div class="clearfix" style="margin-bottom: 10px;"></div>

      <div class="row">
        <div class="col-md-6 text-center">
          <button id="btn-return" type="button" class="btn btn-success btn-lg">关闭</button>
        </div>
      </div>
    </div> 
  </div>
</div>
